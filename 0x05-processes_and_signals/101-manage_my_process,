
#!/usr/bin/env bash
#This script manages 'managemyprocess'
if [ "${1}" == "start" ]; 
then ./managemyprocess & touch /var/run/myprocess.pid echo "$!" > /var/run/myprocess.pid echo "managemyprocess started" elif [ "${1}" == "stop" ]; then echo "managemyprocess stopped" kill "$(cat /var/run/myprocess.pid)" rm /var/run/myprocess.pid elif [ "${1}" == "restart" ]; then kill "$(cat /var/run/myprocess.pid)" rm /var/run/myprocess.pid ./managemyprocess & touch /var/run/myprocess.pid echo "$!" > /var/run/myprocess.pid echo "managemyprocess restart
